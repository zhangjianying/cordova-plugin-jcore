<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
     xmlns:android="http://schemas.android.com/apk/res/android"
     id="cordova-plugin-jcore"
     version="1.2.5">

    <name>JCore</name>
    <description>Cordova plugin for jcore</description>
    <author>WilhanTian, JiGuang</author>
    <keywords>jcore,jpush</keywords>
    <license>MIT License</license>

    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>

    <platform name="android">
        <source-file src="src/android/arm64-v8a/libjcore276.so" target-dir="app/libs/arm64-v8a/libjcore276.so"/>
        <source-file src="src/android/armeabi/libjcore276.so" target-dir="app/libs/armeabi/libjcore276.so"/>
        <source-file src="src/android/armeabi-v7a/libjcore276.so" target-dir="app/libs/armeabi-v7a/libjcore276.so"/>
        <source-file src="src/android/mips/libjcore276.so" target-dir="app/libs/mips/libjcore276.so"/>
        <source-file src="src/android/mips64/libjcore276.so" target-dir="app/libs/mips64/libjcore276.so"/>
        <source-file src="src/android/x86/libjcore276.so" target-dir="app/libs/x86/libjcore276.so"/>
        <source-file src="src/android/x86_64/libjcore276.so" target-dir="app/libs/x86_64/libjcore276.so"/>


        <lib-file src="src/android/jcore-android-2.7.6.jar" />
    </platform>

    <platform name="ios">
        <source-file src="src/ios/jcore-ios-2.2.5.a" framework="true" />
    </platform>
</plugin>
